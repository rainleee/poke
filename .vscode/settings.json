{
    "cSpell.words": [
        "commitlint",
        "nextjs",
        "pokemonspeciesflavortexts",
        "pokemonsprites",
        "zustand"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "vitest.include": [
        "**/*.{test}.{js,mjs,cjs,ts,mts,cts,jsx,tsx}"
    ],
    "vitest.exclude": [
        "**/node_modules/**",
        "**/dist/**",
        "**/cypress/**",
        "**/.{idea,git,cache,output,temp}/**",
        "**/__e2e__/**"
    ]
}